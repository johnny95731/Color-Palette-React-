{
  "include": ["./test.ts", "./testHelper.ts"],
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["DOM", "ES6", "DOM.Iterable", "ScriptHost"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "noEmit": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
  }
}
